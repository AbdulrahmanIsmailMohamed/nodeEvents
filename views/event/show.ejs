<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">
            <%= event.title%>
          </h3>
          <hr>
          <p class="card-text">
            <%= event.description%>
          </p>
          <p>
            <%= event.location%>
          </p>
          <p><span class="badge text-bg-danger"><%= event.date.toDateString()%></span></p>
          <% if (user && user.id == event.userId) { %>
          <a href="<%= "/events/update/" + event.id%>" class="btn btn-primary">Edit</a>
          <a href="<%= "/events/delete/" + event.id%>" class="btn btn-danger">Delete</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer") -%>